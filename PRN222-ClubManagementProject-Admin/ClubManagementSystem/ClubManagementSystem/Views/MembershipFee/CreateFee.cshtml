@model BussinessObjects.Models.Fee

@{
    ViewData["Title"] = "Tạo Phí Mới";
}

<h2>Tạo Phí Mới</h2>

<form asp-action="CreateFee" method="post">
    <input type="hidden" name="clubId" value="@ViewBag.ClubId" />

    <div class="form-group">
        <label>Số Tiền (VND)</label>
        <input name="amount" class="form-control" type="number" step="0.01" required />
    </div>

    <div class="form-group">
        <label>Hạn Đóng Phí</label>
        <input name="dueDate" class="form-control" type="date" required />
    </div>

    <div class="form-group">
        <label>Mô Tả Phí</label>
        <textarea name="feeDescription" class="form-control" required></textarea>
    </div>

    <div class="form-group">
        <label>Loại Phí</label>
        <select name="feeType" class="form-control" required>
            <option value="Membership">Phí Thành Viên</option>
            <option value="Event">Phí Sự Kiện</option>
            @* <option value="Penalty">Phí Phạt</option> *@
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Tạo Phí</button>
    <a asp-action="Index" asp-route-clubId="@ViewBag.ClubId" class="btn btn-secondary">Hủy</a>
</form>